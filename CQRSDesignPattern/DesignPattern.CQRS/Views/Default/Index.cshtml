@model List<DesignPattern.CQRS.CQRSPattern.Results.GetProductQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Urun Adi</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Getir</th>
            <th>Güncelle</th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td><a href="Default/DeleteProduct/@item.ProductID" class="btn btn-danger"> Sil </a></td>
                <td><a href="Default/GetProduct/@item.ProductID" class="btn btn-dark"> Getir </a></td>
                <td><a href="Default/UpdateProduct/@item.ProductID" class="btn btn-secondary"> Güncelle </a></td>
            </tr>
        }






    </table>

    <a href="Default/AddProduct/" class="btn btn-primary"> Yeni Ürün Girişi</a>
</div>